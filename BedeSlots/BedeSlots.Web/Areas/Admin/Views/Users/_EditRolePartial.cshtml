@model EditRoleViewModel

@{
    ViewData["Title"] = "_EditRolePartial";
}

<h2>Change the role of @Model.UserName </h2>

<div>
    <form id="editRole">
        <input asp-for="UserId" id="userId" type="text" hidden />
        @Html.DropDownListFor(model => model.RoleId, Model.Roles, new { @class = "form-control" })
        @Html.AntiForgeryToken()
    </form>
    <br />

    <div class="text-center">
        <button id="btnSubmit" type="submit" class="btn btn-success">Edit</button>
        <button id="btnReject" type="button" class="btn btn-default">Cancel</button>
    </div>
</div>

<script>
    $(document).ready(function () {

        $("#btnSubmit").click(function (event) {
            event.preventDefault();
            var dataToSend = $("#editRole").serialize();

            $.ajax({
                type: "POST",
                url: "/Admin/Users/EditRole",
                data: dataToSend,
                success: function (data) {
                    $("#myModal1").modal("hide");
                    if (data) {
                        oTable = $('#table-users').DataTable();
                        oTable.draw();
                    }
                    else {
                        alert("Something went wrong!");
                    }
                }
            })
        })

        $("#btnReject").click(function (event) {
            event.preventDefault();
            $("#myModal1").modal("hide");
        })
    })
</script>

