
@{
    ViewData["Title"] = "History";
}

<h2 class="text-center">History</h2>

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">

<div id="history-container" class="container">
    <br />
    <div>
        <table id="history-transactions" class="table table-responsive table-striped table-bordered dt-responsive nowrap" cellspacing="0">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Type</th>
                    <th>Amount</th>
                    <th>Description</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="//cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"></script>
    <script src="~/js/Transactions/tableTransactionsHistory.js"></script>
}