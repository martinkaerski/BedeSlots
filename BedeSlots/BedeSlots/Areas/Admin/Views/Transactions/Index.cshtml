
@model IEnumerable<TransactionHistoryViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Transaction History</h2>

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">

<div class="container">
    <br />
    <div style="width:90%; margin:0 auto;">
        <table id="table-transactions" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Type</th>
                    <th>Amount</th>
                    <th>Description</th>
                    <th>User</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="//cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#table-transactions").DataTable({
                "processing": true, // for show progress bar  
                "serverSide": true, // for process server side  
                "filter": true, // this is for disable filter (search box)  
                "orderMulti": false, // for disable multiple column at once  
                "ajax": {
                    "url": "/Admin/Transactions/LoadData",
                    "type": "POST",
                    "datatype": "json"
                },
                "columns": [
              { "data": "date", "name": "Date", "autoWidth": true },
              { "data": "type", "name": "Type", "autoWidth": true },
              { "data": "amount", "name": "Amount", "autoWidth": true },
              { "data": "description", "name": "Description", "autoWidth": true },
              { "data": "user", "name": "User", "autoWidth": true }
                ]
            });
        });  
    </script>
}




