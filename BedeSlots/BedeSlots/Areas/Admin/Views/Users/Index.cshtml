@model UserListingViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User administration</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                Username
                @*@Html.DisplayNameFor(model => model.Username)*@
            </th>
            <th>
                Email
                @*@Html.DisplayNameFor(model => model.Email)*@
            </th>
            <th>
                Firstname
                @*@Html.DisplayNameFor(model => model.FirstName)*@
            </th>
            <th>
                Lastname
                @*@Html.DisplayNameFor(model => model.LastName)*@
            </th>
            <th>
                Balance
                @*@Html.DisplayNameFor(model => model.Balance)*@
            </th>
            <th>
                Currency
                @*@Html.DisplayNameFor(model => model.Currency)*@
            </th>
            <th>
                Role
                @*@Html.DisplayNameFor(model => model.Role)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => user.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.Balance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.Currency)
                </td>
                <td>
                    <form asp-action="AddToRole" method="post">
                        <div class="row">
                            <div class="col-md-9">
                                <input id="user-id" hidden name="UserId" value="@user.Id" />

                                <select id="select-role" name="Role" asp-items="Model.Roles" class="form-control">@user.Role</select>
                            </div>
                            <div class="col-md-3">
                                <input class="btn btn-sm btn-primary" type="submit" value="Add To Role" />
                            </div>
                        </div>
                    </form>
                </td>
                @*<td>
                    <a asp-area="Admin" asp-action="EditRole" asp-controller="UserAdministration">Edit role</a> |
                    <a asp-area="Admin" asp-action="Transactions" asp-controller="UserAdministration">Transactions</a>
                </td>*@
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script>
        $(function () {
            const data = $("#user-id").val();
            console.log(data);
            console.log(typeof(data));


            $.ajax({
                url: "/Admin/Users/GetRole",
                type: "Get",
                contentType: "application/json; charset=utf-8",
                data: { data: data },
                dataType: 'json',
                success: function (role) {
                    $("#select-role").val(role);                 
                },
                error: function (arg, data, value) {
                    console.log(arg + data + value);
                }
            })
        });
    </script>
    }