@model BedeSlots.Web.Models.DepositViewModel
@{
    ViewData["Title"] = "Deposit";
}<style>

    .modal-dialog {
        width: 800px;
        margin: 30px auto;
    }


    </style>
<h2 class="text-center">Deposit</h2>
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <form id="depositform" asp-controller="Deposit" asp-action="Deposit" method="post">
            <div class="well form-group">
                <div id="select-card-dropdown">
                    @await Component.InvokeAsync("SelectCard")
                </div>
            </div>
            <div class="well form-group">
                <label asp-for="@Model.DepositAmount" class="control-label"></label>
                <input type="text" asp-for="@Model.DepositAmount" placeholder="Amount" class="form-control" />
                <span asp-validation-for="@Model.DepositAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-primary form-control" type="submit">Deposit</button>
            </div>
        </form>
    </div>
    @*modal*@
    <div class="modal fade" id="AddCardModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <div>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <h2 class="modal-title text-center" id="AddCardModalLabel">Add card</h2>
                </div>
                <div class="modal-body">
                    @await Component.InvokeAsync("AddCard");
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary form-control" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    @*modalend*@
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script src="~/js/addCard.js"></script>
    <script src="~/lib/jquery/dist/jquery.card.js"></script>

    <script>    
        $('#addCardForm').card({
            container: '.card-wrapper', 

            formSelectors: {
                numberInput: 'input#number', 
                expiryInput: 'input#expiry', 
                cvcInput: 'input#cvv',
                nameInput: 'input#name' 
            },

            messages: {
                validDate: 'valid\ndate', // optional - default 'valid\nthru'
                monthYear: 'mm/yyyy', // optional - default 'month/year'
            },

            placeholders: {
                number: '•••• •••• •••• ••••',
                name: 'Full Name',
                expiry: '••/••',
                cvc: '•••'
            },
        });
    </script>
    <script src="~/js/deposit.js"></script>
}
