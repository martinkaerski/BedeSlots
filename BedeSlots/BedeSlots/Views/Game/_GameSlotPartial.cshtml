@model GameSlotViewModel

<link href="~/css/game.css" rel="stylesheet" />

<section>
    <table id="slot-machine-table" cellpadding="0" cellspacing="0" align="center" class="slot">
        @for (int row = 0; row < @Model.Rows; row++)
        {
            <tr>
                @for (int col = 0; col < @Model.Cols; col++)
                {
                    <td><img id="p@(row.ToString() + col.ToString())" class="gameimg img-responsive" src="~/images/fruits/@(Model.Rows + Model.Matrix[row,col] + ".png")" ></td>
                }
            </tr>
        }

    </table>

    <div class="center-block text-center">
        <div class="inline text text-info">
            @if (Model.Currency != Currency.BGN)
            {
                <strong>
                    Balance: @WebConstants.CurrencySymbols[Model.Currency]@Model.Balance
                </strong>
            }
            else
            {
                <strong>
                    Balance: @Model.Balance @WebConstants.CurrencySymbols[Model.Currency]
                </strong>
            }
        </div>
        <div class="inline text text-success">

            @if (Model.Currency != Currency.BGN)
            {
                <strong>
                    Earning: +@WebConstants.CurrencySymbols[Model.Currency]@Model.Stake
                </strong>
            }
            else
            {
                <strong>
                    Earning: +@Model.Stake @WebConstants.CurrencySymbols[Model.Currency]
                </strong>
            }
        </div>
        <div class="inline text text-info"><strong> @Model.Message</strong></div>
        <input asp-for="@Model.Stake" id="stake-earning" hidden />
    </div>
</section>