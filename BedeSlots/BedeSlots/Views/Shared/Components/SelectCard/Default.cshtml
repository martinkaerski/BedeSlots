@model SelectCardViewModel
@{
    ViewData["Title"] = "Default";
}


<div class="well form-group">
    <label asp-for="@Model.CardsList" class="control-label"></label>
    <select asp-for="@Model.BankCardId" asp-items="@Model.CardsList" class="form-control"></select>
    <span asp-validation-for="@Model.BankCardId" class="text-danger"></span>

    <button type="button" class="btn btn-primary form-control" data-toggle="modal" data-target="#AddCardModal">Add card</button>

</div>